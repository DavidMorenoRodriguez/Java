package ejemplovideo1;

import java.util.logging.Level;
import java.util.logging.Logger;

/**
 *
 * @author Francis
 */
public class Hilo1 extends Thread
{
    private String nombre;
    private int dormir;
    
    public Hilo1(String nombre, int dormir)
    {
        this.nombre = nombre;
        this.dormir = dormir;
    }
    
    @Override
    public void run()
    {
        for (int i = 0; i < 10; i++) 
        {
            System.out.println("Soy el hilo1 " + nombre + " en la iteraciÃ³n " + i);
            try 
            {
                sleep(dormir);
            } 
            catch (InterruptedException ex) 
            {
                System.out.println("Error: " + ex.toString());
            }
        }
    }
}





MAIN

package ejemplovideo1;

/**
 *
 * @author Francis
 */
public class EjemploVideo1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // Creamos los hilos
        Hilo1 hilo1 = new Hilo1("Hilo 1", 1000);
        Hilo1 hilo2 = new Hilo1("Hilo 2", 1000);
        
        // Lanzamos los hilos
        hilo1.start();
        hilo2.start();
    }
    
}
